let currentYear="", currentCategory="", currentSport="";

function openYear(year){currentYear=year; openPage("yearPage"); document.getElementById("yearTitle").innerText="CHOOSE CATEGORY "+year; const optionsDiv=document.getElementById("yearOptions"); optionsDiv.innerHTML=""; for(const cat in sportsData[year]){const btn=document.createElement("button"); btn.innerText=cat; btn.onclick=()=>openCategory(cat); optionsDiv.appendChild(btn);}}

function openCategory(cat){currentCategory=cat; openPage("categoryPage"); document.getElementById("categoryTitle").innerText=`${currentYear} - ${cat} CHOOSE SPORT`; const optionsDiv=document.getElementById("categoryOptions"); optionsDiv.innerHTML=""; sportsData[currentYear][cat].forEach(sp=>{const btn=document.createElement("button"); btn.innerText=sp; btn.onclick=()=>openLineup(sp); optionsDiv.appendChild(btn);});}

function openLineup(sport){currentSport=sport; const key=`${currentYear}_${currentCategory}_${sport.split("‚öΩ")[0]}`; const lineup=lineups[key] || "Lineup coming soon ‚ö°Ô∏è"; openPage("lineupPage"); document.getElementById("lineupTitle").innerText=`${currentYear} - ${currentCategory} - ${sport}`; document.getElementById("lineupText").innerText=lineup;}

function goBackToYear(){openPage("yearPage");}
function goBackToCategory(){openPage("categoryPage");}
